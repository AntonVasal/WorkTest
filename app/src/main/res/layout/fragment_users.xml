<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="isChangesCountVisible"
            type="Boolean" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                app:elevation="0dp"
                android:id="@+id/users_app_bar_layout"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    app:layout_scrollFlags="scroll|snap"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardBackgroundColor="@color/red_dark"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="20dp"
                        android:layout_marginStart="20dp"
                        android:id="@+id/changes_count_card"
                        android:layout_marginVertical="30dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textColor="@color/white"
                            tools:text="1231213213132132"
                            android:paddingHorizontal="5dp"
                            android:gravity="center"
                            android:id="@+id/changes_count_text"
                            android:textSize="20sp"
                            android:lines="1" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:id="@+id/changes_count_title"
                        android:paddingHorizontal="10dp"
                        android:textSize="30sp"
                        android:text="@string/changes_count"/>
                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/users_recycler_view"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <ProgressBar
            android:layout_width="70dp"
            android:layout_height="70dp"
            tools:visibility="visible"
            android:layout_gravity="center"
            android:id="@+id/users_loader"
            android:visibility="gone" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>